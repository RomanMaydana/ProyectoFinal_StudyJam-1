<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:background="@drawable/fondo_item">

    <ImageView
        android:id="@+id/ivImagen"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo"
        android:gravity="bottom"
        android:textSize="16sp"
        android:textColor="#ccc"
        android:layout_toRightOf="@id/ivImagen"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/tvSubtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtitulo"
        android:textSize="13sp"
        android:textColor="#aaaaaa"
        android:layout_toRightOf="@id/ivImagen"
        android:layout_below="@id/tvTitulo"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <ImageView
        android:id="@+id/ivStop"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_stop_white_24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:layout_gravity="center_vertical"/>

    <ImageView
        android:id="@+id/ivPlay"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/ic_play_circle_outline_white_24dp"
        android:layout_toLeftOf="@id/ivStop"
        android:layout_marginRight="6dp"
        android:layout_gravity="center_vertical"/>
    <ImageView
        android:id="@+id/ivInsert"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_playlist_add_white_24dp"
        android:layout_toLeftOf="@id/ivPlay"
        android:layout_marginRight="6dp"
        android:layout_gravity="center_vertical"/>

</RelativeLayout>